{
  "openapi": "3.0.0",
    "info": {
        "title": "The Art Of Coding",
        "description": "The Art Of Coding API is een API die gebruikt word door docenten om de aanwezigheid van studenten te monitoren.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:5000",
            "description": "Ontwikkel server"
        }
    ],
    "paths": {
      "/meeting": {
        "get": {
          "summary": "Get all lessons",
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "les_id": {
                          "type": "integer"
                        },
                        "docent_id": {
                          "type": "integer"
                        },
                        "klas_id": {
                          "type": "integer"
                        },
                        "les_naam": {
                          "type": "string"
                        },
                        "lokaal": {
                          "type": "string"
                        },
                        "strat_date": {
                          "type": "date"
                        },
                        "end_date": {
                          "type": "date"
                        },
                        "actief": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
}